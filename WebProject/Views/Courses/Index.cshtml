@model IEnumerable<WebProject.Models.Courses>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Course_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tutor_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.class_Location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Start_Date)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Course_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tutor_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.class_Location)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Start_Date)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Course_Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Course_Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Course_Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
